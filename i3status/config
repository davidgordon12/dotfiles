# ÃŸ
# If the above line is not correctly displayed, fix your editor first!
general {
  output_format = "i3bar"
  colors = true
  color_good = "#1E66F5"
  color_degraded = "#F1FA8C"
  color_bad = "#FF5555"
}

order += "cpu_usage"
order += "wireless _first_"
order += "volume master"
order += "battery 0"
order += "memory"
order += "tztime local"
order += "volume"

cpu_usage {
	format = " CPU: %usage "
}

wireless _first_ {
        format_up = "%bitrate at %frequency"
        format_down = "No connection"
}

volume master {
        format = "ðŸ”Š%volume"
        format_muted = "ðŸ”ˆ"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
        format = "ðŸ”‹%percentage"
        integer_battery_capacity = true
}

memory {
        format = " %used of %available "
        threshold_degraded = " 1G "
        format_degraded = " MEMORY < %available "
}

tztime local {
        format = " %H:%M:%S %Y-%m-%d "
}
